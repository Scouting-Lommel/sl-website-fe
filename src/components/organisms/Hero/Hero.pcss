.hero {
  position: relative;
  z-index: var(--z-index-hero);

  @media (--mq-from-medium) {
    &--large {
      margin: var(--space-48) auto;
    }
  }
}

.hero__title {
  max-width: 100%;
  margin-bottom: var(--space-24);
  color: var(--color-foreground-light);
  hyphens: manual;

  &--alt {
    color: var(--color-theme-primary);
  }
}

.hero__subtitle {
  color: var(--color-theme-secondary);

  &--alt {
    color: var(--color-foreground-dark);
  }
}

.hero__buttons {
  display: flex;
  flex-direction: column;
  gap: var(--space-12);

  @media (--mq-from-medium) {
    flex-direction: row;
  }
}

.hero__year-theme {
  position: absolute;
  display: none;

  @media (--mq-from-medium) {
    top: -4rem;
    right: 6rem;
    display: block;
  }
}
