.map__container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: var(--space-32);
}

.map__inner {
  width: 100%;
  max-width: 62rem;
}

.map {
  width: 100%;
  border: 0.188rem;
  border-color: var(--color-theme-primary);
  border-radius: var(--border-radius);
  aspect-ratio: 16 / 9;
}

.map__address {
  color: var(--color-neutral-600);
  font-size: 1rem;
}
