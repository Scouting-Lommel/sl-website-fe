.edit_activity__form {
  display: flex;
  flex-direction: column;
  gap: var(--space-16);
  justify-content: center;
}

.edit_activity__label {
  padding: 0 var(--space-16);
}

.edit_activity__input {
  border-radius: 4px;
  border: solid 1px var(--color-light-grey);
  padding: var(--space-16);
  width: 100%;
}

.edit_activity__row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-16);
}

.edit_activity__row__long {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-16);
}

.edit_activity__input__wide {
  border-radius: 4px;
  height: 8rem;
  border: solid 1px var(--color-light-grey);
  width: 100%;
  padding: var(--space-16);
  resize: none;
}

.edit_activity__button {
  display: flex;
  justify-content: center;
}