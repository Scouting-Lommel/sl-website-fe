.login-form {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 1rem;
  padding-top: 2rem;
  padding-bottom: 2rem;
}

.login-form__button {
  margin: 0 auto;
}

.login-form__input {
  width: 100%;
  padding: 1rem;
  border: solid 1px lightgrey;
  border-radius: 4px;
}

.login-form__label {
  max-width: 20rem;
  padding: 0 1.8rem;
  margin: 0 auto;
}

.login-form__loader {
  display: flex;
  justify-content: center;
}
