.login-form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  justify-content: center;
}

.login-form__button {
  margin: 0 auto;
}

.login-form__input {
  border-radius: 4px;
  border: solid 1px lightgrey;
  padding: 1rem;
  width: 100%;
}

.login-form__label {
  padding: 0 1.8rem;
  max-width: 20rem;
  margin: 0 auto;
}

.login-form__loader {
  display: flex;
  justify-content: center;
}
