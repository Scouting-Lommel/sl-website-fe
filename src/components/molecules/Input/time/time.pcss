.timeLabel {
  display: grid;
  grid-template-rows: auto auto;
  gap: 0.2em;
}

.timeInput {
  padding: 5px;
  border: 2px solid var(--color-theme-secondary);
  outline: none;
  border-radius: 5px;
  cursor: text;
  background-color: var(--color-theme-secondary);

  &::-webkit-calendar-picker-indicator {
    background-color: white;
    padding: 4px;
    cursor: pointer;
    border-radius: 3px;
  }
}
