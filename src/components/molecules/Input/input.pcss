.input {
  padding: var(--space-16);

  flex-basis: 30%;
  flex-grow: 1;

  @media (--mq-up-to-small) {
    flex-basis: 100%;
  }

  @media (--mq-from-small) {
    flex-basis: 50%;
  }

  @media (--mq-from-large) {
    flex-basis: 30%;
  }

  &--type-submit {
    flex-basis: 100%;
  }

  display: flex;
  justify-content: flex-start;
  align-items: center;
}
