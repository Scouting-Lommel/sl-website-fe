.activity {
  display: grid;
  padding-right: var(--space-32);
  padding-bottom: var(--space-32);
  padding-left: var(--space-32);
  grid-template-rows: auto auto;

  @media (--mq-up-to-medium) {
    padding-right: 0;
    padding-left: 0;
  }
}

.activity__header {
  padding-bottom: var(--space-32);
  @media (--mq-from-medium) {
    display: grid;
    grid-template-columns: 65% 35%;
  }
  @media (--mq-up-to-medium) {
    display: grid;
    grid-template-rows: auto auto;
  }
}

.activity__header__title {
  font-family: var(--font-family-title);
  font-size: 1.25rem;
  font-style: normal;
  font-weight: var(--font-weight-bold);
  letter-spacing: normal;
  line-height: 95%;
  text-align: left;
  white-space: pre-wrap;

  @media (--mq-from-small) {
    font-size: 1.5rem;
  }

  @media (--mq-from-large) {
    font-size: 2rem;
  }
}

.activity__border {
  width: 100%;
}

.activity__header__time {
  display: grid;
  color: var(--color-dark-grey);
  font-family: var(--font-family-body);

  /* grid-template-rows: auto auto; */
  font-size: 0.7rem;
  font-style: normal;
  letter-spacing: normal;
  vertical-align: top;

  @media (--mq-up-to-medium) {
    padding-top: var(--space-16);
    text-align: left;
  }

  @media (--mq-from-medium) {
    text-align: right;
  }

  @media (--mq-from-small) {
    font-size: 0.9rem;
  }

  @media (--mq-from-large) {
    font-size: 1.2rem;
  }
}

.activity__border__line {
  width: 80%;
  border-bottom: solid 1px var(--color-dark-grey);
  margin-right: auto;
  margin-bottom: 2rem;
  margin-left: auto;
}

.activity__description {
  font-family: var(--font-family-body);
  font-size: 0.7rem;
  font-style: normal;
  letter-spacing: normal;
  text-align: left;
  white-space: pre-wrap;

  @media (--mq-from-small) {
    font-size: 0.9rem;
  }

  @media (--mq-from-large) {
    font-size: 1.2rem;
  }
}
