.image__img {
  display: block;
  max-width: 100%;
  max-height: 100%;
  opacity: 1;
  transition: opacity var(--transition);
}

.image {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;

  &--lazy {
    background-color: var(--color-skeleton);

    & .image__img {
      opacity: 0;
    }
  }

  &--maximisable {
    cursor: pointer;
  }
}
