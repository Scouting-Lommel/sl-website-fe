.image {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;

  &--loading {
    .image__img {
      display: none;
    }
  }

  &--maximisable {
    cursor: pointer;
  }
}

.image__img {
  display: block;
  max-width: 100%;
  max-height: 100%;
  opacity: 1;
  transition: opacity var(--transition);
}

.image__blur {
  object-fit: contain;
}
