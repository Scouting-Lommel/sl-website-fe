.loader {
  width: 120px;
  height: 120px;
  border: 16px solid var(--color-theme-primary);
  border-top: 16px solid var(--color-theme-secondary);
  animation: spin 2s linear infinite;
  border-radius: 50%;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
