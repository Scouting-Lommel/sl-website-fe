.loader {
  border: 1rem solid var(--color-theme-primary);
  border-top: 1rem solid var(--color-theme-secondary);
  border-radius: 50%;
  width: 7.5rem;
  height: 7.5rem;
  animation: spin 2s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
