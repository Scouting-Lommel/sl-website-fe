.loader {
  overflow: hidden;
  width: 7.5rem;
  height: 7.5rem;
  border: 1rem solid var(--color-theme-primary);
  border-top: 1rem solid var(--color-theme-secondary);
  animation: spin 2s linear infinite;
  border-radius: 50%;

  /* hide text */
  text-indent: 100%;
  white-space: nowrap;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
