.icon {
  display: inline-block;

  &--xs {
    width: 1.125rem;
    height: 1.125rem;
  }

  &--sm {
    width: 1.25rem;
    height: 1.25rem;
  }

  &--md {
    width: 1.5rem;
    height: 1.5rem;
  }

  &--lg {
    width: 1.75rem;
    height: 1.75rem;
  }

  &--xl {
    width: 4rem;
    height: 4rem;
  }

  &--custom {
    width: 2.2rem;
    height: 2.2rem;
  }
}

.icon__svg {
  display: block;
  width: 100%;
  height: 100%;
  color: currentColor;
}
