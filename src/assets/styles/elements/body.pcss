*,
*::after,
*::before {
  box-sizing: inherit;
}

html {
  scroll-behavior: smooth;
}

body {
  display: block;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
  background-color: var(--color-background);
  color: var(--color-foreground);
  overflow-x: hidden;
}
